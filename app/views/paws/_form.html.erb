<div class="container" style="padding: 70px">

  <%= form_for(@paw, multipart: true) do |f| %>
     <% if paw.errors.any? %>
             <% paw.errors.full_messages.each do |message| %>
             <p class="text-danger">~><%= message%><~</p>
             <% end %>
          <% end %>   
   <div class="col-md-6 justify-content-center">
           <div class="form-group">
             
             <%= f.label :name %>
             <%=  f.text_field :name,class: 'form-control',placeholder: 'cannot be empty' %>
             
            <div class="form-inline" style="padding: 10px 0px 10px 0px">
             <%= f.label :gender, class: 'mr-sm-2' %>
             <%= f.select :gender,options_for_select(['Male','Female']),class: 'custom-select mb-2' %>
             </div>
             
             <%= f.label :breed %>
             <%=  f.text_field :breed,class: 'form-control' %>
  
             <%= f.label :Birthday %>
             <%= f.date_field :dob,class: "form-control",placeholder: 'dd/mm/yyyy' %>
             <%= f.time_field :dob,class: "form-control" %>   
                              
             <%= f.label :Avatar %>
             <%= f.file_field :avatar,class: 'form-control-file' %>
             
             <div style="padding: 20px"><%= f.submit "Upload", class: 'btn btn-primary' %></div>
           </div>
       
  
   </div>
</div>
<% end %>